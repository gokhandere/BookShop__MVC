@model IEnumerable<BookShop.Author>

@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AuthorList</h2>

<p>
    @Html.ActionLink("Add Author", "AddAuthor")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditAuthor", new { id = item.id }) |
            @Html.ActionLink("Details", "DetailsAuthor", new { id = item.id }) |
            @Html.ActionLink("Delete", "DeleteAuthor", new { id = item.id })
        </td>
    </tr>
}

</table>
