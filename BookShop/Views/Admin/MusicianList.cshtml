@model IEnumerable<BookShop.Musician>

@{
    ViewBag.Title = "MusicianList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MusicianList</h2>

<p>
    @Html.ActionLink("AddMusician", "AddMusician")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MusicianName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MusicianName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditMusician", new { id = item.id }) |
            @Html.ActionLink("Details", "DetailsMusician", new { id = item.id }) |
            @Html.ActionLink("Delete", "DeleteMusician", new { id = item.id })
        </td>
    </tr>
}

</table>
