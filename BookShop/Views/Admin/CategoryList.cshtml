@model IEnumerable<BookShop.Category>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CategoryList</h2>

<p>
    @Html.ActionLink("Add Category", "AddCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { id = item.id }) |
            @Html.ActionLink("Details", "DetailsCategory", new { id = item.id }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id = item.id })
        </td>
    </tr>
    
}

</table>
<div class="form-actions no-color">
    @Html.ActionLink("Back to List", "AuthorList")
</div>